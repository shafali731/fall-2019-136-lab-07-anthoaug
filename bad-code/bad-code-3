	 	#include <fstream>
 #include <cctype>

					#include "funcs/funcs.h"

using std::ifstream;

void removeLeadingSpaces(string& line) {
										int cnt = 0;

for (char c : line)
				if (isspace(c))
	cnt++;
			else {
			line = line.substr(cnt);
		return;
	}
	}

		int countChar(const string& line, char c) {
	int cnt = 0;

					for (char ch : line)
		if (ch == c)
	cnt++;

			return cnt;
																					}